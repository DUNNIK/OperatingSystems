#!/bin/bash

if [[ -d "$HOME/restore" ]]
then
	rm -r "$HOME/restore"
fi

mkdir "$HOME/restore"

backup=$(ls "$HOME" | grep -E "^Backup-[0-9]{4}-[0-9]{2}-[0-9]{2}$" | sort | tail -n1)

if [[ -z "$backup" ]]
then
	echo "No any backups!"
	exit
fi

if [[ -z $(ls "$HOME/$backup") ]]
then
	echo "Backup is empty!"
	exit
fi

for line in $(ls "$HOME/$backup" | grep -vE ".[0-9]{4}-[0-9]{2}-[0-9]{2}$")
do
	cp "$HOME/$backup/$line" "$HOME/restore/$line"
done
